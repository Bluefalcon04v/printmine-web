{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": "./",
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": ["src/components/*"],
      "@public/*": ["public/*"],
      "@Image/*": ["public/images/*"],
      "@Icons/*": ["public/icons/*"],
      "@app/*": ["src/app/*"],
      "@helper/*": ["src/helper/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "public/images/index.jax"
  ],
  "exclude": ["node_modules"]
}
